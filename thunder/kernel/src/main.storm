static vga_cursor_position;

global putchar(int c)
    poke8(0xb8000 + vga_cursor_position, c);

    vga_cursor_position += 2;

    return 0;
endfun

global puts(int str)
    int c;
    int i = 0;

    while c = peek8(str + i);
        putchar(c);
        i += 1;
    endwhile

    return 0;
endfun

global _start()
    puts("hello world\n");

    while 1; endwhile
endfun
